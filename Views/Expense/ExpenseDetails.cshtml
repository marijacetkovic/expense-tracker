@model ExpenseTracker.Models.ExpenseDetailsViewModel

<div class="container mt-5 mb-5" style="max-width: 700px;">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a asp-action="Index" class="text-dark">History</a></li>
            <li class="breadcrumb-item active">Expense Details</li>
        </ol>
    </nav>

    <div class="card-minimal p-5 shadow-sm">
        <div class="text-center mb-5">
            <h1 class="display-title mb-2">@Model.Name</h1>
            <p class="text-muted small text-uppercase tracking-wider">
                @Model.Date.ToString("D")
            </p>
            <div class="display-4 fw-bold mt-4">€@Model.TotalAmount.ToString("N2")</div>
        </div>

        <h6 class="fw-bold text-uppercase small text-muted mb-3 border-bottom pb-2">Breakdown</h6>
        
        <div class="list-group list-group-flush mb-4">
            @foreach (var p in Model.Participants)
            {
                <div class="list-group-item d-flex justify-content-between align-items-center py-3 border-0 px-0">
                    <div>
                        <span class="fw-medium @(p.IsCurrentUser ? "text-primary" : "")">
                            @p.Username @(p.IsCurrentUser ? "(You)" : "")
                        </span>
                    </div>
                    <span class="fw-bold">€@p.ShareAmount.ToString("N2")</span>
                </div>
            }
        </div>

        @if (Model.UserShare > 0)
        {
            <div class="bg-light p-4 rounded-3 text-center mb-4">
                <p class="small text-muted mb-1">Your individual responsibility</p>
                <h3 class="fw-bold mb-0">€@Model.UserShare.ToString("N2")</h3>
            </div>
        }

        @if (Model.CreatedByUserId == Context.Session.GetInt32("UserId"))
        {
            <div class="mt-4 d-flex gap-2">
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-dark flex-grow-1 py-3 fw-bold">
                    <i class="bi bi-pencil-square me-2"></i>Edit
                </a>
                <button type="button" class="btn btn-outline-danger px-4" data-bs-toggle="modal" data-bs-target="#deleteModal">
                    <i class="bi bi-trash"></i>
                </button>
            </div>
        }
    </div>

    <div class="text-center mt-4">
        <a asp-action="Index" class="btn btn-outline-minimal">Back to History</a>
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content card-minimal border-0 shadow-lg p-4">
            <h5 class="fw-bold mb-3">Delete Expense?</h5>
            <p class="text-muted small">This action cannot be undone. All participant records for "@Model.Name" will be permanently removed.</p>
            
            <div class="d-flex gap-2 mt-4">
                <button type="button" class="btn btn-light flex-grow-1" data-bs-dismiss="modal">Cancel</button>
                <button type="button" id="confirmDeleteBtn" class="btn btn-danger flex-grow-1 py-2">
                    Delete Permanently
                </button>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            const deleteBtn = document.getElementById('confirmDeleteBtn');
            if (deleteBtn) {
                deleteBtn.addEventListener('click', async function() {
                    const expenseId = @Model.Id;
                    console.log("Attempting to delete ID:", expenseId);

                    try {
                        const response = await fetch(`/api/expenseapi/${expenseId}`, {
                            method: 'DELETE',
                            headers: {
                                'Content-Type': 'application/json'
                            }
                        });

                        if (response.status === 204 || response.ok) {
                            window.location.href = '/Expense/Index';
                        } else if (response.status === 403) {
                            alert("Access Denied: You didn't create this expense.");
                        } else {
                            alert("Server error. Could not delete.");
                        }
                    } catch (error) {
                        console.error("Fetch Error:", error);
                        alert("Failed to connect to server.");
                    }
                });
            }
        });
    </script>
}