@model IEnumerable<ExpenseTracker.Models.ExpenseViewModel>
@{
    ViewData["Title"] = "All Expenses";
}

<div class="container mt-5 mb-5">
    
    <div class="d-flex justify-content-between align-items-center mb-4 pb-2 border-bottom">
        <h2 class="fw-bold" style="letter-spacing: -0.03em;">Expense History</h2>
        
        <a asp-controller="Expenses" asp-action="Add" class="btn btn-primary-minimal">
            <i class="bi bi-plus-lg me-2"></i> New Expense
        </a>
    </div>

    @if (Model == null || !Model.Any())
    {
        <div class="text-center py-5 card-minimal mt-5">
            <i class="bi bi-receipt-cutoff display-4 text-muted mb-3"></i>
            <h4 class="fw-bold">No expenses found.</h4>
            <p class="text-muted">Start tracking your transactions to see them here.</p>
            <a asp-controller="Expenses" asp-action="Add" class="btn btn-primary-minimal mt-3">
                <i class="bi bi-plus-lg me-2"></i> Add First Expense
            </a>
        </div>
    }
    else
    {
        <div class="card-minimal p-0">
            <div class="table-responsive">
                <table class="table table-hover table-borderless mb-0">
                    <thead style="border-bottom: 1px solid var(--border-color);">
                        <tr style="font-size: 0.85rem; color: var(--color-gray);">
                            <th scope="col" style="width: 15%;">DATE</th>
                            <th scope="col" style="width: 35%;">TITLE</th>
                            <th scope="col" style="width: 25%;">PAID BY</th>
                            <th scope="col" class="text-end" style="width: 15%;">AMOUNT (â‚¬)</th>
                            <th scope="col" style="width: 10%;"></th> </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr class="align-middle" style="font-size: 0.95rem;">
                                <td>
                                    <span class="fw-bold">@item.Date.ToShortDateString()</span>
                                </td>
                                <td class="fw-medium">@item.Name</td>
                                 
                                <td class="text-end fw-bold text-dark">@item.Amount.ToString("N2")</td>
                                <td>
                                    <div class="d-flex justify-content-end gap-2">
                                        <a asp-action="Details" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-dark p-0" style="width: 30px; height: 30px; line-height: 28px; border: none;">
                                            <i class="bi bi-eye"></i>
                                        </a>
                                        <a asp-action="Edit" asp-route-id="@item.Id" 
                                           class="btn btn-sm btn-outline-dark p-0" style="width: 30px; height: 30px; line-height: 28px; border: none;">
                                            <i class="bi bi-pencil"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    }
</div>