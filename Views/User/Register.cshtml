@model ExpenseTracker.Models.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" /> 
    
</head>
<body style="background-color: #f8fafc;">
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-md-5 col-lg-4">

                <div class="text-center mb-4">
                    <h2 class="fw-bold" style="letter-spacing: -0.03em;">Create Your Account</h2>
                    <p class="text-muted small">Start tracking your expenses with precision.</p>
                </div>

                <div class="card-minimal">
                    <form asp-action="Register" method="post">
                        
                        <div class="mb-4">
                            <label asp-for="Username" class="form-label"></label>
                            <input asp-for="Username" class="form-control-minimal" placeholder="e.g. johndoe" />
                            <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control-minimal" placeholder="you@example.com" />
                            <span asp-validation-for="Email" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="Password" class="form-label"></label>
                            <input asp-for="Password" class="form-control-minimal" type="password" placeholder="••••••••" />
                            <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="ConfirmPassword" class="form-label">Confirm Password</label>
                            <input asp-for="ConfirmPassword" class="form-control-minimal" type="password" placeholder="••••••••" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger small mt-1 d-block"></span>
                        </div>
                        
                        @if (!ViewData.ModelState.IsValid)
                        {
                            <div class="alert alert-danger py-2 small mb-4">
                                @Html.ValidationSummary(true, "", new { @class = "m-0" })
                            </div>
                        }

                        <button type="submit" class="btn btn-primary-minimal w-100">
                            Create Account
                        </button>
                    </form>
                </div>

                <p class="text-center mt-4 small text-muted">
                    Already have an account? 
                    <a href="/Account/Login" class="text-dark fw-bold text-decoration-none border-bottom border-dark">Login here</a>
                </p>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@4.0.0/dist/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>