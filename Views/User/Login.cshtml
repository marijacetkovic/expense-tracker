@model ExpenseTracker.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-5 col-lg-4"> <div class="text-center mb-4">
                <h2 class="fw-bold" style="letter-spacing: -0.03em;">Welcome back</h2>
                <p class="text-muted small">Enter your credentials to access your account.</p>
            </div>

            <div class="card-minimal">
                <form asp-action="Login" method="post">
                    
                    <div class="mb-4">
                        <label asp-for="Username" class="form-label">Username</label>
                        <input asp-for="Username" class="form-control-minimal" placeholder="e.g. johndoe" />
                        <span asp-validation-for="Username" class="text-danger small mt-1 d-block"></span>
                    </div>

                    <div class="mb-4">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Password" class="form-label">Password</label>
                            <a href="#" class="small text-decoration-none text-muted">Forgot password?</a>
                        </div>
                        <input asp-for="Password" type="password" class="form-control-minimal" placeholder="••••••••" />
                        <span asp-validation-for="Password" class="text-danger small mt-1 d-block"></span>
                    </div>

                    @if (!ViewData.ModelState.IsValid)
                    {
                        <div class="alert alert-danger py-2 small mb-3">
                            @Html.ValidationSummary(true, "", new { @class = "m-0" })
                        </div>
                    }

                    <button type="submit" class="btn btn-primary-minimal w-100">
                        Sign In
                    </button>
                </form>
            </div>

            <p class="text-center mt-4 small text-muted">
                Don't have an account? 
                <a asp-area="" asp-controller="User" asp-action="Register" class="text-dark fw-bold text-decoration-none border-bottom border-dark">Sign up</a>
            </p>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}