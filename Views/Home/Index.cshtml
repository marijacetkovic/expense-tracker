@{
    ViewData["Title"] = "Home Page";
}

<div class="container py-5">

    <div class="text-center mb-5">
        <h1 class="display-4 fw-bold">Expense Tracker</h1>
        <p class="text-muted fs-5">
            Track your spending, understand your habits, and take control of your finances.
        </p>
    </div>
    <div class="row g-4">

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Dashboard</h3>
                    <p class="card-text text-muted">
                        View an overview of your monthly expenses, charts, and spending insights.
                    </p>
                    <a href="/Dashboard" class="btn btn-primary mt-3">Go to Dashboard</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Add Expense</h3>
                    <p class="card-text text-muted">
                        Quickly log your daily expenses and categorize your transactions.
                    </p>
                    <a href="/Expenses/Create" class="btn btn-success mt-3">Add Expense</a>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card shadow-sm border-0 h-100">
                <div class="card-body text-center p-4">
                    <h3 class="card-title mb-3">Expense List</h3>
                    <p class="card-text text-muted">
                        Browse, edit, or delete past expenses in a clean, organized list view.
                    </p>
                    <a href="/Expenses" class="btn btn-outline-primary mt-3">View All</a>
                </div>
            </div>
        </div>

    </div>

    <div class="text-center mt-5">
        <p class="fs-5 text-muted">Ready to manage your finances better?</p>
        <a href="/Expenses/Create" class="btn btn-lg btn-primary shadow">
            Start Tracking Now
        </a>
    </div>

</div>
