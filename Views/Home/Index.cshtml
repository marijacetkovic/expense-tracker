@{
    ViewData["Title"] = "expenso.";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;800&display=swap">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    :root {
        --font-main: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        --color-black: #000000;
        --color-gray: #6b7280;
        --color-light-gray: #f3f4f6;
        --transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    body {
        font-family: var(--font-main);
        color: var(--color-black);
        background-color: #ffffff;
        -webkit-font-smoothing: antialiased;
    }

    /* Hero Section */
    .hero-section {
        padding: 5rem 0 0rem;
        max-width: 900px;
        margin: 0 auto;
    }

    .brand-logo {
        font-weight: 800;
        letter-spacing: -0.06em;
        font-size: 4.5rem;
        margin-bottom: 1.5rem;
        display: inline-block;
    }

    .subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        color: var(--color-gray);
        line-height: 1.6;
        max-width: 550px;
        margin: 0 auto;
    }

    /* Feature Cards - Super Minimal */
    .feature-grid {
        margin-top: 4rem;
        border-top: 1px solid #f0f0f0;
        padding-top: 4rem;
    }

    .feature-card {
        padding: 1.5rem;
        height: 100%;
        transition: var(--transition);
        border: none;
        background: transparent;
    }

    .feature-icon {
        font-size: 1.25rem;
        margin-bottom: 1.25rem;
        color: var(--color-black);
        display: block;
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 0.5rem;
        font-size: 1rem;
        letter-spacing: -0.01em;
    }

    .card-text {
        color: var(--color-gray);
        font-size: 0.9rem;
        line-height: 1.5;
    }

    /* Minimal CTA */
    .cta-section {
        margin-top: 6rem;
        padding-bottom: 8rem;
    }

    .cta-link {
        font-size: 1rem;
        font-weight: 500;
        color: var(--color-black);
        text-decoration: none;
        position: relative;
        padding-bottom: 4px;
        transition: var(--transition);
    }

    .cta-link::after {
        content: '';
        position: absolute;
        width: 100%;
        height: 1px;
        bottom: 0;
        left: 0;
        background-color: var(--color-black);
        transform: scaleX(0.1);
        transform-origin: bottom right;
        transition: transform 0.3s ease;
    }

    .cta-link:hover::after {
        transform: scaleX(1);
        transform-origin: bottom left;
    }

    /* Subtle Fade-in Animation */
    .fade-in {
        animation: fadeIn 0.8s ease-out forwards;
    }

    @@keyframes fadeIn {
        from { opacity: 0; transform: translateY(20px); }
        to { opacity: 1; transform: translateY(0); }
    }
</style>

<div class="container px-4">
    <div class="hero-section text-center fade-in">
        <h1 class="brand-logo mb-4">expenso.</h1>
        <p class="subtitle">
            Your chosen approach to shared finance. 
            Track logic, manage split strategies, and verify history.
        </p>

        <div class="cta-section">
            <a href="/User/Register" class="cta-link">
                Start tracking &rarr;
            </a>
        </div>
    </div>

    <div class="row g-5 feature-grid fade-in" style="animation-delay: 0.2s;">
        <div class="col-md-4">
            <div class="feature-card">
                <i class="bi bi-shield-check feature-icon"></i>
                <h3 class="card-title">Identity</h3>
                <p class="card-text">
                    Isolated accounts to keep your shared transactions verified and private.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <i class="bi bi-grid feature-icon"></i>
                <h3 class="card-title">Strategy</h3>
                <p class="card-text">
                    Engineered using the Strategy Pattern for mathematically perfect equal splitting.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <i class="bi bi-list feature-icon"></i>
                <h3 class="card-title">Log</h3>
                <p class="card-text">
                    A permanent, chronological record of every cent shared with your network.
                </p>
            </div>
        </div>
    </div>
</div>