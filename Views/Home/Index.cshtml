@{
    ViewData["Title"] = "Expense Tracker";
}

<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap">
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

<style>
    :root {
        --font-main: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
        --color-black: #0f172a;
        --color-gray: #64748b;
        --border-color: #e2e8f0;
    }

    body {
        font-family: var(--font-main);
        color: var(--color-black);
    }

    /* Minimalist Utilities */
    .hero-section {
        padding: 6rem 0;
        max-width: 800px;
        margin: 0 auto;
    }

    .display-title {
        font-weight: 800;
        letter-spacing: -0.04em;
        line-height: 1.1;
        color: var(--color-black);
    }

    .subtitle {
        font-size: 1.25rem;
        font-weight: 400;
        color: var(--color-gray);
        line-height: 1.6;
    }

    /* Professional Cards */
    .feature-card {
        background: #fff;
        border: 1px solid var(--border-color);
        padding: 2rem;
        height: 100%;
        transition: border-color 0.2s ease, box-shadow 0.2s ease;
        text-align: left; /* Left align reads more professional than center for cards */
    }

    .feature-card:hover {
        border-color: var(--color-black);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    .feature-icon {
        font-size: 1.5rem;
        margin-bottom: 1.5rem;
        color: var(--color-black);
    }

    .card-title {
        font-weight: 600;
        margin-bottom: 0.75rem;
        font-size: 1.1rem;
    }

    .card-text {
        color: var(--color-gray);
        font-size: 0.95rem;
    }

    /* Sharp Buttons */
    .btn-custom {
        border-radius: 4px; /* Slight rounding, not pill */
        padding: 0.75rem 1.5rem;
        font-weight: 600;
        font-size: 0.95rem;
        letter-spacing: -0.01em;
    }

    .btn-primary-minimal {
        background-color: var(--color-black);
        color: white;
        border: 1px solid var(--color-black);
    }

    .btn-primary-minimal:hover {
        background-color: white;
        color: var(--color-black);
    }

    .btn-outline-minimal {
        background-color: transparent;
        color: var(--color-black);
        border: 1px solid var(--border-color);
    }

    .btn-outline-minimal:hover {
        border-color: var(--color-black);
    }
</style>

<div class="container">

    <div class="hero-section text-center">
        <h1 class="display-3 display-title mb-4">Master your finances.</h1>
        <p class="subtitle mb-5">
            A precise tool to track expenses, split costs, and gain financial clarity. 
            No clutter, just the data you need.
        </p>
        
        <div class="d-flex justify-content-center gap-3">
            <a href="/Expenses/Create" class="btn btn-custom btn-primary-minimal">
                Add Expense
            </a>
            <a href="#" class="btn btn-custom btn-outline-minimal">
                Learn more
            </a>
        </div>
    </div>

    <div class="row g-4 mb-5 pb-5">
        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-lightning-charge"></i>
                </div>
                <h3 class="card-title">Quick Logging</h3>
                <p class="card-text">
                    Streamlined inputs allow you to record transactions in seconds. 
                    Intelligent defaults reduce repetitive data entry.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-calculator"></i>
                </div>
                <h3 class="card-title">Cost Splitting</h3>
                <p class="card-text">
                    Accurate debt calculation for shared expenses. 
                    Ideal for shared households and group travel.
                </p>
            </div>
        </div>

        <div class="col-md-4">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="bi bi-bar-chart"></i>
                </div>
                <h3 class="card-title">Data Insights</h3>
                <p class="card-text">
                    Analyze your spending patterns with clear, unembellished visualizations. 
                    Make decisions based on hard data.
                </p>
            </div>
        </div>
    </div>

    <div class="text-center py-5 border-top">
        <p class="mb-3 fw-bold small text-uppercase tracking-wide text-muted">Get Started</p>
        <a href="/Expenses/Create" class="text-decoration-none text-dark fs-4 fw-bold border-bottom border-dark pb-1">
            Start tracking today &rarr;
        </a>
    </div>

</div>